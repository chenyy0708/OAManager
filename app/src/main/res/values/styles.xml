<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <!-- 无限轮播-->
    <style name="BannerDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">150dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">5000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#00aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/selecter_banner</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@mipmap/icon_banner</item>
    </style>
    <!--首页销售额文字style-->
    <style name="mainTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_403</item>
        <item name="android:textSize">11dp</item>
        <item name="android:background">@drawable/shape_main</item>
    </style>

    <!--业务处理style-->
    <style name="business_process">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_393</item>
        <item name="android:textSize">11dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!-- 左右边距-->
    <style name="maginLeftAndRight_28">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
    </style>

    <!-- Edittext手机号-->
    <style name="editText_phone">
        <item name="android:maxLength">11</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">phone</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColorHint">@color/text_color_C7C</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <!-- Edittext输入数字-->
    <style name="editText_number">
        <item name="android:maxLines">1</item>
        <item name="android:background">#00000000</item>
        <item name="android:textColorHint">@color/text_color_C7C</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>
    <!--CheckBox样式-->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_CAC</item>
        <item name="colorControlActivated">@color/mainColor</item>
    </style>
</resources>
